</div>

@*------------------Carousel-------------------*@
@if (carCardBlock != null)
{
    var offerCars = carCardBlock?
    .Where(b =>
        b?.Content?.Value<bool>("offer") == true &&
        b?.Content?.Value<bool>("froze") != true
    )
    .ToList();

    if (offerCars.Any())
    {
        <div class="carousel-outerContainer">

            <div class="shadow-container"><h4 class="prosfores">ΠΡΟΣΦΟΡΕΣ</h4></div>
            <div class="tesla-carousel-wrapper">
            <button class="tesla-arrow prev" aria-label="Προηγούμενο">
                ‹
            </button>
                <div class="tesla-carousel">
                    <div class="tesla-track">

                        @foreach (var card in offerCars)
                        {
                            var content = card?.Content;
                            if (content == null) { continue; }

                            var carID = content.Value<string>("carID");
                            var carPic = content.Value<MediaWithCrops>("carPic")?.Url();
                            var maker = content.Value<string>("maker");
                            var modelo = content.Value<string>("model");
                            var price = content.Value<string>("price");
                            var typeOfDiscount = content.Value<string>("typeOfDiscount");

                            var targetUrl = isLoggedIn
                                ? $"/carDetailsMember?id={carID}"
                                : $"/carDetailsVisitor?id={carID}";

                            var gr = new CultureInfo("el-GR");
                            string formattedPrice = "";

                            if (!string.IsNullOrWhiteSpace(price) &&
                                long.TryParse(price, NumberStyles.Integer, CultureInfo.InvariantCulture, out var n))
                            {
                                formattedPrice = n.ToString("#,0", gr);
                            }
                            else
                            {
                                formattedPrice = price ?? "";
                            }

                            <div class="tesla-card">
                                <a href="@targetUrl"
                                data-car-id="@carID"
                                onclick="return onCardClick(event, '@carID')"
                                class="tesla-link">

                                @if(carPic != null){
                                    <img src="@carPic" alt="@modelo" />
                                }
                                else {
                                    <img src="@noImgUrl" alt="@modelo" />
                                }
                                    <div class="tesla-overlay">
                                        <span class="discount-badgeMain">Offer</span>

                                        <h2>@maker @modelo</h2>
                                        <p>ΜΟΝΟ @formattedPrice €</p>

                                        <button class="tesla-btn">
                                            Δείτε λεπτομέρειες
                                        </button>
                                    </div>

                                </a>
                            </div>
                        }
                    </div>
                </div>
                <button class="tesla-arrow next" aria-label="Επόμενο">
                ›
            </button>
            </div>
        </div>
    }
}

