<script>
document.addEventListener("DOMContentLoaded", () => {

  const track = document.querySelector(".tesla-track");

  if (!track) {
    console.error("TESLA CAROUSEL: δεν βρέθηκε track");
    return;
  }

  // ✅ GUARD – ΣΤΑΜΑΤΑ ΤΟ ΔΙΠΛΟ INIT
  if (track.dataset.inited === "true") return;
  track.dataset.inited = "true";

  // ⛔ ΠΑΙΡΝΟΥΜΕ ΜΟΝΟ ΤΙΣ ORIGINAL ΚΑΡΤΕΣ
  const cards = Array.from(track.querySelectorAll(".tesla-card:not(.clone)"));
  console.log(cards);
  const prev  = document.querySelector(".tesla-arrow.prev");
  const next  = document.querySelector(".tesla-arrow.next");

  if (!cards.length || !prev || !next) {
    console.error("TESLA CAROUSEL: λείπουν στοιχεία");
    return;
  }

  const gap = 24;
  let index = 0;
  let isAnimating = false;

  const cardWidth = () =>
    cards[0].getBoundingClientRect().width + gap;

  const realCardsCount = cards?.length;
  const wrapper = track.closest(".tesla-carousel-wrapper");
    function updateArrowsVisibility(){
        if (window.innerWidth >= 2500 && realCardsCount >= 4) {
        wrapper?.classList.remove("hide-arrows");
        } 
        else {
        wrapper?.classList.add("hide-arrows");
        console.log(wrapper);
        console.log("mpike");
        }
    }
 updateArrowsVisibility();
  window.addEventListener("resize", updateArrowsVisibility);

  function move() {
    track.style.transition = "transform 0.6s ease";
    track.style.transform =
      `translateX(-${index * cardWidth()}px)`;
  }

  next.addEventListener("click", () => {
    if (isAnimating) return;
    isAnimating = true;

    index++;
    move();

    if (index === realCardsCount) {
      setTimeout(() => {
        track.style.transition = "none";
        index = 0;
        track.style.transform = "translateX(0)";
        isAnimating = false;
      }, 600);
    } else {
      setTimeout(() => isAnimating = false, 600);
    }
  });

  prev.addEventListener("click", () => {
    if (isAnimating) return;
    isAnimating = true;

    if (index === 0) {
      track.style.transition = "none";
      index = realCardsCount;
      track.style.transform =
        `translateX(-${index * cardWidth()}px)`;
    }

    requestAnimationFrame(() => {
      requestAnimationFrame(() => {
        track.style.transition = "transform 0.6s ease";
        index--;
        track.style.transform =
          `translateX(-${index * cardWidth()}px)`;
        setTimeout(() => isAnimating = false, 600);
      });
    });
  });
});

</script>

